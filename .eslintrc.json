{
  "env": {
    "node": true,
    "commonjs": true,
    "es2020": true
  },
  "extends": ["eslint:recommended", "plugin:jest/recommended"],
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "arrow-spacing": 2,
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "indent": [
        "error",
        2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-empty": 2,
    "no-tabs": 2,
    "no-multi-spaces": 2,
    "no-trailing-spaces": 2,
    "no-unreachable": 2,
    "prefer-const": 2,
    "quotes": [
        "error",
        "single"
    ],
    "semi": [
        "error",
        "always"
    ]
  }
}